{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "bashdb",
            "request": "launch",
            "terminalKind": "integrated",
            "name": "Bash-Debug (simplest configuration)",
            //*"program": "${file}",
            "program": "inject.sh",
            "args": [
                "arg1=value1",
                "arg2=value2",
                "arg3=value3",
                "rootdir=${PWD}",
                "127"
            ],
            "env": {
                "ENV_NAME": "dev"
            }
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name and arguments)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "args": [
                "${command:AskForScriptArguments}"
            ]
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name and arguments, with environment variables)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "env": {
                "MY_ENV_VAR": "my_env_var_value"
            }
        }
    ],
    "commands": [
        {
            "command": "extension.inputBox",
            "type": "askForArguments",
            "placeholder": "Enter script arguments"
        },
        {
            "command": "extension.inputBox",
            "type": "askForScriptName",
            "placeholder": "Enter script name"
        }
    ]
}